@using System;
@using System.Collections.Generic;
@using System.Text;
@using InfinityHelper.Server.Core;
@inherits InfinityServerTemplate<InfinityServerModel>
@{
    
}
@section head{
    <script src="~/Scripts/Login.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.btn-login').click(function () {
                var uname = $('#username').val();
                var pword = $('#password').val();                

                $.postJson("/api/Login", { "username": uname, "password": pword }, function (data) {
                    if (data.IsOk == true) {
                        window.location.href = '@Model.Site.DefaultPath';
                    }
                    else {
                        alert(data.Msg);
                    }
                });                

                return false;
            });
        });
    </script>
}
<form class="center-form">    
    <h2 class="form-signin-heading">登录</h2>
    <div class="form-group">
        <label for="username">账号</label>
        <div class="user-names">
            <input class="form-control" id="username" name="username" autofocus="" placeholder="请输入账号">
        </div>
    </div>
    <div class="form-group">
        <label for="password">密码</label>
        <div>
            <input class="form-control" id="password" name="password" type="password" placeholder="请输入登录密码">
        </div>
    </div>
    <div class="checkbox">
        <label>
            <input id="remember" type="checkbox"> 记住密码
        </label>        
    </div>
    <div class="btn-group btn-group-justified">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary btn-login">登录</button>
        </div>
    </div>
</form>
<div class="input-group-template hidden">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">选择<span class="caret"></span></button>
    <ul class="dropdown-menu dropdown-menu-right">
    </ul>
</div>